@require '../lib/vars.styl'

*
  box-sizing border-box

body
  background react-blue
  font-family helvetica
  color darken(white, 10%)
  font-size 18px

h1
  margin 20px 0

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

.page
  padding 20px
  
.siteLogo
  margin-left -20px
  margin-right -20px
  margin-top -20px
  margin-bottom 40px
  display flex
  align-items center
  height 60vh
  min-height 400px
  // background url(./img/rwr-computer-general.png) 0 -100px
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('./img/rwr-computer-general-gauss.png') no-repeat 0 -100px
  background-size cover
  @media(max-width 750px)
    background-size 900px
    background-position -80px 0
  @media(max-width 500px)
    background-size 700px
    background-position -100px 0
    
  
  +below(420px)
    display block
    
  img
    display block
    width 200px
    margin-right auto
    margin-left auto

.siteTitle
  display flex
  align-items center

  +below(420px)
    display block
    
  .centerText
    margin-left auto
    margin-right auto
    color white

.hl
  font-weight bold
  color white
.App
  background black
  min-width 320px

  h1
    color react-blue
    font-weight 300
    font-size 3em

  p
    color white

.homeDescription
  display block
  
  p.centerText
    text-align center
    font-size 1.2em
    color react-blue
    
  p.whiteText
    color white
    text-align center
    margin-top -10px
    
    

.nav
  background darken(black, 10%)
  padding-left 20px

  a
    display inline-block
    padding 20px
    text-transform lowercase
    text-decoration none
    color darken(white, 20%)
    &:hover
      color white

  .active
    background black
    color white
    border-bottom 2px solid white
    margin-bottom -2px
    
.footer
  background darken(black, 10%)
  padding-left 20px
  color white
  
  // .footContent
  //   margin-left auto
  //   margin-right auto
  
  a
    display block
    padding 20px
    color darken(white, 20%)
    text-align center
    cursor pointer
    text-decoration none
    &:hover
      color white
      
  .reactAtomLogo
    background-image url(./img/react-atom.svg)
    
  .smallImg
    width 25px
    margin-bottom -5px




